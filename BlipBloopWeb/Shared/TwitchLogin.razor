<AuthorizeView>
    <Authorized>
        <MudMenu OffsetY="true" OffsetX="true" Direction="Direction.Left">
            <ActivatorContent>
                <MudChip Icon="@Icons.Material.Rounded.Person" Color="Color.Primary" Variant="Variant.Filled">@ServiceContext.UserName</MudChip>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Disabled="true">
                    Logged in as
                    <b>@ServiceContext.UserName</b>
                </MudMenuItem>
                <MudMenuItem Link="/Logout">Logout</MudMenuItem>
            </ChildContent>
        </MudMenu>
    </Authorized>
    <NotAuthorized>
        <MudButton Color="Color.Secondary" Variant="Variant.Filled" Link="Login?redirectUri=/">Log in</MudButton>
    </NotAuthorized>
</AuthorizeView>

@code {
    [CascadingParameter(Name = "ServiceContext")]
    public MainLayout ServiceContext { get; set; }
}
