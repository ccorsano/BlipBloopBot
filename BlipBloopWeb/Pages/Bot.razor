@page "/bot"
@using Conceptoire.Twitch.Options

<MudContainer>
    <MudText Typo="Typo.h4"><MudIcon Icon="@Icons.Filled.Psychology" Size="Size.Large" /> @ServiceContext.ActiveChannel?.BroadcasterName : Bot</MudText>

    @if (ServiceContext.IsChannelIntegrationActive)
    {
        <BotActivation />

        <BotAccountSelection />

        <MudPaper>
            <MudText Typo="Typo.h5">Commands configuration</MudText>
            <BlipBloopWeb.Shared.Commands.CommandGrid />
        </MudPaper>
    }
    else
    {
        <MudAlert Severity="Severity.Warning">
            Channel integration is currently inactive.
        </MudAlert>
    }
</MudContainer>

@code {
    [CascadingParameter(Name = "ServiceContext")]
    public MainLayout ServiceContext { get; set; }

    //private Dictionary<string, CommandOptions> _botCommands = new Dictionary<string, CommandOptions>();
}
