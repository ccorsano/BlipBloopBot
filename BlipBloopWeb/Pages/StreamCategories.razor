@using BlipBloopWeb.Shared.Commands.GameSynopsis
@page "/categories"

<MudContainer>
    @if (ServiceContext.ActiveChannel != null)
    {
        <MudText Typo="Typo.h4">
            <MudIcon Icon="@Icons.Filled.PlaylistPlay" Size="Size.Large" /> @ServiceContext.ActiveChannel.BroadcasterName : Stream Categories
        </MudText>
        <MudContainer>
            <MudText Typo="Typo.h5">Synopsis database</MudText>

            <SynopsisBrowser></SynopsisBrowser>
        </MudContainer>
    }
    else
    {
        <MudAlert Severity="Severity.Warning">
            No active channel to manage.
        </MudAlert>
    }

</MudContainer>

@code {
    [CascadingParameter(Name = "ServiceContext")]
    public MainLayout ServiceContext { get; set; }
}